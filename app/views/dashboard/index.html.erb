<h1><%= link_to "To-Do-List", lists_path, class: 'navbar-brand' %></nav></h1>
<% if can? :manage, @users %>
  <p>Hello, you are an Admin</p>
  <%= link_to 'Back', lists_path %>
  <table class = "table table-bordered">
  <thead">
  <tr class>
    <th>Email</th>
    <th>Admin</th>
    <th>Delete</th>
  </tr>
  </thread>
  <% for user in @users %>
  <tr>
    <td><%= user.email %></td> 
    <td><%= user.admin %></td>
    <td><%= button_to "Delete", user, :confirm => "Are you sure?", :method => :delete,  class: 'btn btn-outline-danger btn-sm', method: :delete %></td>
  </tr>  
  <% end %>
</table>
<% else %>
  <p>Hello, you are not an Admin</p>
<% end %>

<%# delete account that are inactive more more than 30 days %>
<% User.where(['updated_at < ?', 30.days.ago]).destroy_all %>