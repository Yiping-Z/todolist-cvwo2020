<%= bootstrap_form_with(model: list, local: true) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :tag_list, "(separated by commas)" %>
    <%= form.text_field :tag_list %>
  </div>

  <div class="field">
    <%= form.date_field :ddl %>
  </div>

  <div class="field">
    <%= form.check_box :completed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
