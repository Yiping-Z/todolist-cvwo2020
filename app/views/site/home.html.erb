<div class="vw-100 vh-100 primary-color d-flex align-items-center justify-content-center">
    <div class="jumbotron jumbotron-fluid bg-transparent">
      <div class="container secondary-color">
        <h1 class="display-4">Welcome to To-Do-List</h1>
        <p class="lead">
          If you're logged in, check out <%= link_to "the app", lists_path %>!
        </p>
        <hr class="my-4" />
        <% if user_signed_in? %>  
          <%= button_to 'Exit', destroy_user_session_path, method: :delete %>       
          <% else %>
          <%= link_to('Login', new_user_session_path)  %> |
          <%= link_to('Sign Up', new_user_registration_path)  %>  
        <% end %>
      </div>
    </div>
</div>